<Window x:Class="GeometryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор геометрических фигур" Height="500" Width="650">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Выберите фигуру:" Margin="5" VerticalAlignment="Center"/>
        <ComboBox x:Name="ShapeComboBox" Grid.Row="0" Grid.Column="1" Margin="5" SelectionChanged="ShapeComboBox_SelectionChanged">
            <ComboBoxItem Content="Куб"/>
            <ComboBoxItem Content="Конус"/>
            <ComboBoxItem Content="Тетраэдр"/>
        </ComboBox>

        
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип расчета:" Margin="5" VerticalAlignment="Center"/>
        <ComboBox x:Name="CalculationTypeComboBox" Grid.Row="1" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="Объем"/>
            <ComboBoxItem Content="Площадь поверхности"/>
            <ComboBoxItem Content="Оба параметра"/>
        </ComboBox>

        
        <StackPanel x:Name="CubeParametersPanel" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" Margin="5" Visibility="Collapsed">
            <TextBlock Text="Сторона куба:" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="CubeSideTextBox" Width="100" Margin="5" Text="5"
                     PreviewTextInput="NumberValidationTextBox" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        </StackPanel>

        <!-- Параметры конуса (видимы только при выборе конуса) -->
        <StackPanel x:Name="ConeParametersPanel" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Vertical" Margin="5" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Радиус конуса:" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="ConeRadiusTextBox" Width="100" Margin="5" Text="3"
                         PreviewTextInput="NumberValidationTextBox" PreviewKeyDown="TextBox_PreviewKeyDown"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Высота конуса:" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="ConeHeightTextBox" Width="100" Margin="5" Text="5"
                         PreviewTextInput="NumberValidationTextBox" PreviewKeyDown="TextBox_PreviewKeyDown"/>
            </StackPanel>
        </StackPanel>

        
        <StackPanel x:Name="TetrahedronParametersPanel" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" Margin="5" Visibility="Collapsed">
            <TextBlock Text="Ребро тетраэдра:" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="TetrahedronEdgeTextBox" Width="100" Margin="5" Text="4"
                     PreviewTextInput="NumberValidationTextBox" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        </StackPanel>

        <!-- Кнопка вычисления -->
        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Вычислить" 
                Click="CalculateButton_Click" HorizontalAlignment="Center" Margin="5" Padding="10" Width="120"/>

       
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Результаты:" Margin="5" FontWeight="Bold"/>
        <TextBlock x:Name="OutputText" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" 
                   TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14"/>

        
        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Content="Показать детали" 
                Click="ShowDetails_Click" HorizontalAlignment="Center" Margin="5" Padding="10" Width="120"/>
    </Grid>
</Window>